;==
[colors]

background = #2f343f
background-alt = #4f545f
foreground = #d8dee8
foreground-alt = #787e68
accent = #81a1c1
alert = #ebcb8b


[bar/top]

monitor = HDMI-A-1
height = 24
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 4
padding-right = 4
module-margin-left = 2
module-margin-right = 2
font-0 = Noto Sans:pixelsize=8
font-1 = FontAwesome:pixelsize=8
;tray-position = right
;tray-padding = 2
;tray-background = ${colors.background}
wm-restack = bspwm
modules-left = bspwm
modules-center = xwindow
modules-right =  mpd himanshu alsa date powermenu


[module/bspwm]

type = internal/bspwm
label-focused = %name%
label-focused-background= ${colors.background-alt}
label-focused-padding = 3
label-occupied = %name%
label-occupied-padding = 3
label-occupied-foreground= ${colors.foreground}
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 3
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 3


[module/xwindow]

type = internal/xwindow
label = %title:0:100:...%


[module/mpd]

type = internal/mpd
;format-online = <icon-prev>  <label-time>  <label-song>  <icon-next>
;format-online = <toggle>  <label-song>
format-online = <label-song>
;icon-play = ⏵
;icon-pause = ⏸
;icon-stop = ⏹
;icon-prev = ⏮
;icon-next = ⏭
;icon-seekb = ⏪
;icon-seekf = ⏩
icon-prev-foreground = ${colors.accent}
icon-next-foreground = ${colors.accent}
con-pause-foreground = ${colors.accent}
label-song-maxlen = 45
label-song-ellipsis = true



[module/himanshu]
type = custom/script
interval = 3.0
exec = ~/.config/polybar/scripts/himanshu.sh
label = %output%


[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = "V "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill =  -
bar-volume-fill-font = 2
bar-volume-empty =  
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


;format-volume = <label-volume> <bar-volume>
;label-volume = "%percentage%%"
;label-volume-foreground = ${colors.accent}
;format-muted-prefix = "v "
;format-muted-foreground = ${colors.accent}
;label-muted = "Muted "
;label-muted-foreground= ${colors.foreground-alt}
;bar-volume-width = 6
;bar-volume-indicator = -
;bar-volume-fill = | 
;bar-volume-empty = +
;bar-volume-empty-foreground = ${colors.foreground-alt}

[module/wlan]
type = internal/network
interface = enp9s0f3u2
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = w0
ramp-signal-1 = w1
ramp-signal-2 = w2
ramp-signal-3 = w3
ramp-signal-4 = w4
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = vboxnet0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = "L "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]

type = internal/date
interval = 30
label = " %date% %time%"
date = %A, %d %B %Y
time = %H:%M
format-prefix =  
format-prefix-foreground = ${colors.accent}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = P
label-open-foreground = ${colors.foreground}
label-close = P cancel
label-close-foreground = ${colors.foreground}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

