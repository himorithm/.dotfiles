[colors]

background = #2f343f
background-alt = #4f545f
foreground = #d8dee8
foreground-alt = #787e68
accent = #81a1c1
alert = #ebcb8b


[bar/top]

monitor = HDMI-A-1
height = 24
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = FontAwesome5Free:style=Solid:pixelsize=10:antialias=false;3
font-1 = Noto Sans:pixelsize=10

;offset-x = 5%
width=98%
;tray-position = right
;tray-padding = 2
;tray-background = ${colors.background}
wm-restack = bspwm
modules-left = bspwm
modules-center = xwindow
modules-right =  mpd pulseaudio myuptime popup-calendar updates-arch-combined powermenu

[module/myuptime]
type = custom/script
exec = echo "|$(uptime -p)"
interval = 600
format-foreground = #EFEA08

[module/updates-arch-combined]
type = custom/script
exec = ~/.config/polybar/scripts/updates-arch-combined.sh
interval = 7200
format-background = #732929


[module/bspwm]

type = internal/bspwm
label-focused = %name%
label-focused-background= #00AAFF
;${colors.background-alt}
label-focused-padding = 3
label-occupied = %name%
label-occupied-padding = 3
label-occupied-foreground= #EFEA08
;${colors.foreground}
label-urgent = %name%
label-urgent-background = #A52A2A
;${colors.alert}
label-urgent-padding = 3
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 3


[module/xwindow]

type = internal/xwindow
label = %title:0:100:...%


[module/mpd]

type = internal/mpd
format-online = <icon-prev>  <label-time>  <label-song>  <icon-next>
;format-online = <toggle>  <label-song>
;format-online = <label-song>
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
;icon-seekb = ⏪
;icon-seekf = ⏩
icon-prev-foreground = ${colors.accent}
icon-next-foreground = ${colors.accent}
con-pause-foreground = ${colors.accent}
label-song-maxlen = 45
label-song-ellipsis = true



[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_09_00.6.analog-stereo
format-volume = |<bar-volume> <label-volume>
label-volume = 
label-volume-foreground = #EFEA08
;${root.foreground}

format-muted-prefix =
format-muted-foreground = #EFEA08
label-muted = |  

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator =
bar-volume-indicator-font = 2
bar-volume-fill =  
bar-volume-fill-font = 2
bar-volume-empty =
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}



[module/popup-calendar]
type = custom/script
exec = ~/.config/polybar/scripts/popup-calendar.sh
interval = 5
click-left = ~/.config/polybar/scripts/popup-calendar.sh --popup &
format-foreground = #EFEA08


[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = " "
label-open-foreground = ${colors.foreground}
label-close = P cancel
label-close-foreground = ${colors.foreground}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

